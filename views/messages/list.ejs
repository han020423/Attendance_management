<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1><%= title %></h1>
  <p><a href="/me/dashboard">대시보드로 돌아가기</a></p>
  <a href="/messages/new">새 메시지 작성</a>

  <table>
    <thead>
      <tr>
        <th>구분</th>
        <th>상대방</th>
        <th>제목</th>
        <th>시간</th>
      </tr>
    </thead>
    <tbody>
      <% messages.forEach(message => { %>
        <% const isSent = message.from_user_id === user.id; %>
        <tr style="<%= !isSent && !message.is_read ? 'font-weight: bold;' : '' %>">
          <td>
            <% if (isSent) { %>
              <span style="color: #007bff;">보냄</span>
            <% } else { %>
              <span style="color: #28a745;">받음</span>
              <% if (!message.is_read) { %>
                <span style="font-size: 0.8em; color: red;">(안읽음)</span>
              <% } %>
            <% } %>
          </td>
          <td><%= isSent ? (message.ToUser ? message.ToUser.name : 'N/A') : (message.FromUser ? message.FromUser.name : 'N/A') %></td>
          <td><a href="/messages/<%= message.id %>"><%= message.title %></a></td>
          <td><%= new Date(message.createdAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (totalPages > 1) { %>
    <nav class="pagination-nav">
      <ul class="pagination">
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">이전</a>
        </li>

        <% 
          const startPage = Math.max(1, currentPage - 2);
          const endPage = Math.min(totalPages, currentPage + 2);
        %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">다음</a>
        </li>
      </ul>
    </nav>
  <% } %>

</body>
</html>
